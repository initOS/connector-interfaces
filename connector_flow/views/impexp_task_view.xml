<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- impexp.task -->

    <record id="task_tree" model="ir.ui.view">
        <field name="name">impexp.task.tree</field>
        <field name="model">impexp.task</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <tree string="Task Tree">
                <field name="name"/>
                <field name="task"/>
                <field name="flow_id"/>
                <field name="channel_id"/>
            </tree>
        </field>
    </record>

    <record id="task_form" model="ir.ui.view">
        <field name="name">impexp.task.form</field>
        <field name="model">impexp.task</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Task Form">
                <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1><field name="name" placeholder="Task name"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="task"/>
                            <field name="flow_id"/>
                            <field name="channel_id"/>
                        </group>
                        <group>
                            <field name="flow_start"/>
                            <field name="max_retries"/>
                        </group>
                    </group>
                    <notebook>
                        <page name="config" string="Configuration">
                            <div>
                                <label for="config"/>
                                <field name="config"/>
                            </div>
                        </page>
                        <page name="flow" string="Flow">
                            <div>
                                <label for="transitions_out_ids"/>
                                <field name="transitions_out_ids"/>
                            </div>
                            <div>
                                <label for="transitions_in_ids"/>
                                <field name="transitions_in_ids"/>
                            </div>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- impexp.task.flow -->

    <record id="task_flow_tree" model="ir.ui.view">
        <field name="name">impexp.task.flow.tree</field>
        <field name="model">impexp.task.flow</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <tree string="Task Flow Tree">
                <field name="name"/>
                <field name="task_ids"/>
                <field name="channel_id"/>
            </tree>
        </field>
    </record>

    <record id="task_flow_form" model="ir.ui.view">
        <field name="name">impexp.task.flow.form</field>
        <field name="model">impexp.task.flow</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Task Flow Form">
                <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1><field name="name"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="channel_id"/>
                        </group>
                    </group>
                    <div>
                        <label for="task_ids"/>
                        <field name="task_ids"/>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <record id="task_flow_diagram" model="ir.ui.view">
        <field name="name">impexp.task.flow.diagram</field>
        <field name="model">impexp.task.flow</field>
        <field name="type">diagram</field>
        <field name="arch" type="xml">
            <diagram string="Task Flow Diagram">
                <node object="impexp.task" bgcolor="gray:flow_start==True">
                    <field name="name"/>
                    <field name="task"/>
                    <field name="flow_start" invisible="1"/>
                </node>
                <arrow object="impexp.task.transition" source="task_from_id" destination="task_to_id">
                    <field name="task_from_id"/>
                    <field name="task_to_id"/>
                </arrow>
            </diagram>
        </field>
    </record>

    <!-- impexp.task.transition -->

    <record id="task_transition_form" model="ir.ui.view">
        <field name="name">impexp.task.transition.form</field>
        <field name="model">impexp.task.transition</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Task Transition Form">
                <group>
                    <field name="task_from_id"/>
                    <field name="task_to_id"/>
                </group>
            </form>
        </field>
    </record>

    <!-- menu and window actions -->

    <record id="task_view_action" model="ir.actions.act_window">
        <field name="name">Tasks</field>
        <field name="res_model">impexp.task</field>
        <field name="view_mode">tree,form</field>
        <field name="view_type">form</field>
        <field name="view_id" ref="task_tree"/>
        <field name="target">current</field>
    </record>

    <record id="task_flow_view_action" model="ir.actions.act_window">
        <field name="name">Task Flows</field>
        <field name="res_model">impexp.task.flow</field>
        <field name="view_mode">tree,diagram,form</field>
        <field name="view_type">form</field>
        <field name="view_id" ref="task_flow_tree"/>
        <field name="target">current</field>
    </record>

    <menuitem id="menu_impexp_task"
              name="Tasks"
              parent="menu_impexp_root"
              sequence="20"
              action="task_view_action"/>

    <menuitem id="menu_impexp_task_flow"
              name="Task Flows"
              parent="menu_impexp_root"
              sequence="10"
              action="task_flow_view_action"/>
</odoo>
