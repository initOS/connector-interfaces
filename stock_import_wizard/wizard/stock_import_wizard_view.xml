<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="stock_import_form" model="ir.ui.view">
            <field name="name">stock.import.form</field>
            <field name="model">stock.import</field>
            <field name="arch" type="xml">
                <form string="Stock Import" version="7.0">
                    <group>
                        <field name="datas" filename="datas_fname" />
                        <field name="datas_fname" invisible="1"/>
                    </group>
                    <group>
                        <field name="location_id"/>
                        <field name="location_dest_id"/>
                        <field name="flow_id"/>
                    </group>
                    <footer>
                        <button name="run_import" string="Run Import" type="object" class="oe_highlight"/>
                        or
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
        <record model="ir.actions.act_window" id="stock_import_action">
            <field name="name">Stock Import</field>
            <field name="res_model">stock.import</field>
            <field name="view_mode">form</field>
            <field name="view_type">form</field>
            <field name="view_id" ref="stock.vpicktree"/>
            <field name="target">new</field>
        </record>

        <menuitem id="stock_import_menu"
                  name="Stock Import"
                  parent="stock.menu_stock_warehouse_mgmt"
                  action="stock_import_action"
                  sequence="30"/>
    </data>
</openerp>

